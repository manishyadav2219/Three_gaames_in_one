<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Highscore">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_above="@id/celeb_score"
            android:id="@+id/game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Name"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/opensans"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="22sp"/>
            <TextView
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:fontFamily="@font/opensans"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"/>
        </RelativeLayout>



        <View
            android:layout_above="@id/celeb_score"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>
        <RelativeLayout
            android:layout_above="@id/maths_score"
            android:id="@+id/celeb_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess Celebrity"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/opensans"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/cscore"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/opensans"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
        </RelativeLayout>
        <View
            android:layout_above="@id/maths_score"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>
        <RelativeLayout
            android:id="@+id/maths_score"
            android:layout_above="@id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maths Quiz"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/opensans"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/mscore"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="152"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/opensans"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_above="@id/go_back"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="160dp"
            android:background="#E0E0E0"/>
        <Button
            android:id="@+id/go_back"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans"
            android:text="Go back"
            android:layout_above="@+id/bottom_line"
            android:layout_marginBottom="48dp"
            android:layout_centerHorizontal="true"
            android:onClick="fin"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>